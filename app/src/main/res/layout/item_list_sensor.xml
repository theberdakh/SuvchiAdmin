<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/shape_corner"
    android:layout_margin="4dp"
    android:paddingVertical="8dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="horizontal">


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:padding="4dp"
                >

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_view_sensor_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:shapeAppearanceOverlay="?shapeAppearanceCornerLarge"
                    android:scaleType="centerCrop"
                    android:src="@drawable/round_sensors_24" />


            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textview_sensor_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="File name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />


                <TextView
                    android:id="@+id/textview_sensor_subtitle"
                    android:layout_width="wrap_content"
                    tools:text="File date"
                    android:layout_height="wrap_content"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>




</LinearLayout>